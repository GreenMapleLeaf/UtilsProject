<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.feng.custom_widget_project.activity.ScrollingActivity">

    <com.example.feng.custom_widget_project.widget.scroller.ScrollerLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9900ffff">

        <TextView
            android:id="@+id/custom"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="900dp"
            android:background="#4000ff00"
            android:text="TextView"
            android:textColor="#99000000" />

        <ImageView
            android:id="@+id/custom2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:alpha="0.9"
            android:background="#22ff00ff"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    </com.example.feng.custom_widget_project.widget.scroller.ScrollerLayout>


</FrameLayout>
