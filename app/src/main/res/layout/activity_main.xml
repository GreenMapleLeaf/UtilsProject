<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.feng.test.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!" />

            <Button
                android:id="@+id/showLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="showLog" />

            <Button
                android:id="@+id/showToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="showToast" />


            <Button
                android:id="@+id/showCustomToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="showCustomToast" />


            <Button
                android:id="@+id/showCustomLayoutToast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="showCustomLayoutToast" />

            <TextView
                android:id="@+id/text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="5"
                android:text="afijfiejfijefiafijfiejfijefiafijfiejfijefiafijfiejfijefiafijfiejfijefiafijfiejfijefiafijfiejfijefiafijfiejfijefi" />

            <TextView
                android:id="@+id/text_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶就覅额姐姐覅阿胶" />

            <Button
                android:id="@+id/text_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="5"
                android:text="web" />

            <Button
                android:id="@+id/text_webList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="5"
                android:text="weblist" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
